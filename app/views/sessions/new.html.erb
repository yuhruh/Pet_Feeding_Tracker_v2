<p style="color: green"><%= notice %></p>
<h1 class="text-center mt-4">Log in for Pet Trackers App</h1>
<%= params[:session] %>


<div class="container">
  <%= form_with(scope: :session, url: login_path, local: true) do |form| %>
    <div class="col-12">
      <div class="row mb-3 justify-content-center">
      <%= form.label :name, class: "col-sm-3 col-form-label", style: "color: #515a5a; font-weight: bold" %>
      <div class="col-sm-3">
        <%= form.text_field :name, class: "form-control", placeholder: "Enter a username" %>
       </div> 
    </div>

    <div class="col-12">
      <div class="row mb-3 justify-content-center">
      <%= form.label :password, class: "col-sm-3 col-form-label", style: "color: #515a5a; font-weight: bold" %>
      <div class="col-sm-3">
        <%= form.password_field :password, class: "form-control", placeholder: "Enter your password"  %>
      </div>
    </div>

    <div class="d-flex justify-content-center">
      <%= form.submit "Log in", class: "btn", style: "color: #515a5a; font-weight: bold; background-color: #d5dbdb" %>
    </div>
  <% end %>
</div>

