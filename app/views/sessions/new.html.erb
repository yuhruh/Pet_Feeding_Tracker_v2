<p style="color: green"><%= notice %></p>
<h1 class="text-center mt-4">Log in for Pet Trackers App</h1>

<div class="container">
  <%= form_with(scope: :session, url: login_path) do |form| %>
    <div class="col-12">
      <div class="row mb-3 justify-content-center">
      <%= form.label :email, class: "col-sm-3 col-form-label", style: "color: #515a5a; font-weight: bold" %>
      <div class="col-sm-3">
        <%= form.email_field :email, class: "form-control", placeholder: "Enter your email address"  %>
      </div>
    </div>

    <div class="col-12">
      <div class="row mb-3 justify-content-center">
      <%= form.label :password, class: "col-sm-3 col-form-label", style: "color: #515a5a; font-weight: bold" %>
      <div class="col-sm-3">
        <%= form.password_field :password, class: "form-control", placeholder: "Enter your password"  %>
      </div>
    </div>

    <div class="d-flex justify-content-center">
      <%= form.submit "Log in", class: "btn", style: "color: #515a5a; font-weight: bold; background-color: #d5dbdb" %>
    </div>
  <% end %>
</div>

