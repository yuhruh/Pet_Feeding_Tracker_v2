<div class="container">
  <%= form_with(model: tracker) do |form| %>
    <div class="d-flex justify-content-center">
      <% if tracker.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(tracker.errors.count, "error") %> prohibited this tracker from being saved:</h2>

          <ul>
            <% tracker.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

    <div class="col-12">
      <div class="row mb-3 justify-content-center">
        <%= form.label :date, class: "col-sm-3 col-form-label", style: "color: #515a5a; font-weight: bold" %>
        <div class="col-sm-3">
          <%= form.date_field :date, class: "form-control", value: Date.current, max: Date.current %>
        </div>
      </div>

      <div class="row mb-3 justify-content-center">
        <%= form.label :feeding_time, class: "col-sm-3 col-form-label", style: "color: #515a5a; font-weight: bold" %>
        <div class="col-sm-3">
          <%= form.time_field :feeding_time, class: "form-control", value: Time.now.to_fs(:time), max: (Time.now + 5.minutes).to_fs(:time)  %>
        </div>
      </div>

      <div class="row mb-3 justify-content-center">
        <%= form.label :time_of_eat_back_and_forth, class: "col-sm-3 col-form-label", style: "color: #515a5a; font-weight: bold" %>
        <div class="col-sm-3">
          <%= form.text_field :time_of_eat_back_and_forth, class: "form-control" %>
        </div>
      </div>

      <div class="row mb-3 justify-content-center">
        <%= form.label :type, class: "col-sm-3 col-form-label", style: "color: #515a5a; font-weight: bold" %>
        <div class="col-sm-3">
          <%= form.select :type, [["Dry"], ["Wet"], ["Other"]], { prompt: "Select Food Type" }, class: "form-control" %>
        </div>
      </div>

      <div class="row mb-3 justify-content-center">
        <%= form.label :brand, class: "col-sm-3 col-form-label", style: "color: #515a5a; font-weight: bold" %>
        <div class="col-sm-3">
          <%= form.text_field :brand, class: "form-control" %>
        </div>
      </div>

      <div class="row mb-3 justify-content-center">
        <%= form.label :description, class: "col-sm-3 col-form-label", style: "color: #515a5a; font-weight: bold" %>
        <div class="col-sm-3">
          <%= form.text_field :description, class: "form-control" %>
        </div>
      </div>

      <div class="row mb-3 justify-content-center">
        <%= form.label :amount, class: "col-sm-3 col-form-label", style: "color: #515a5a; font-weight: bold" %>
        <div class="col-sm-3">
          <%= form.text_field :amount, class: "form-control floatingInput" %>
        </div>
      </div>

      <div class="row mb-3 justify-content-center">
        <%= form.label :left_amount, class: "col-sm-3 col-form-label", style: "color: #515a5a; font-weight: bold" %>
        <div class="col-sm-3">
          <%= form.text_field :left_amount, class: "form-control floatingInput" %>
        </div>
      </div>

      <div class="row mb-3 justify-content-center">
        <%= form.label :favorite_score, class: "col-sm-3 col-form-label", style: "color: #515a5a; font-weight: bold" %>
        <div class="col-sm-3">
          <fieldset disabled>
            <%= form.number_field :favorite_score, class:"form-control" %>
          </fieldset>
        </div>
      </div>

      <div class="d-flex justify-content-center">
        <%= form.submit "Add New Record" %>
      </div>
    </div>
  <% end %>
</div>