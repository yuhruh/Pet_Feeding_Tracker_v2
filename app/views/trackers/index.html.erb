<div class="d-flex justify-content-center">
  <h1 class="text-center mt-4">Pet <%= @pet.pet_name.capitalize %>'s Trackers</h1>
</div>

<div class="d-flex float-sm-center justify-content-center mb-4">
  <%= link_to "#{image_tag('icon_add.png', width:'18px', height: '18px')}  Adding #{@pet.pet_name.capitalize}'s New Record".html_safe, new_pet_tracker_path %>
</div>

<%= render 'tracker' %>

<%= @pet.trackers.any?{|tracker| tracker.transformed_time.nil? } %>
<%= column_chart [{name: "wet ate total amount", data: @pet.trackers.where(food_type: "Wet").group(:transformed_time).sum(:total_ate_amount)}, 
  {name: "dry ate total amount", data: @pet.trackers.where(food_type: "Dry").group(:transformed_time).sum(:total_ate_amount)},
  {name: "other ate total amount", data: @pet.trackers.where(food_type: "Other").group(:transformed_time).sum(:total_ate_amount)}], stacked: true %>